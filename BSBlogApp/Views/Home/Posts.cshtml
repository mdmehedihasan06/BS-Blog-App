
@{
    ViewBag.Title = "Posts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Posts</h2>

<div id="result">
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            $.get('/api/Posts', function (data) {
                $('#result').empty();
                $.each(data, function (i, v) {
                    var string = '<a href="/api/Posts/'+v.PostId+'">'+ v.PostTitle + '</a>';
                    $('#result').html($('#result').html() + string + '<br />');
                });
            }, 'json');
        });

    </script>
}
